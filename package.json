{
  "name": "dotfiles",
  "version": "0.77.0",
  "description": "PatEvs' personal system configuration dotfiles",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/dotfiles.git"
  },
  "scripts": {
    "postinstall": "script-progress node ./scripts/postInstall",
    "updates": "script-progress node ./scripts/checkUpdates",
    "release": "np"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "chalk": "^4.1.0",
    "commitlint-config-gitmoji": "^2.2.1",
    "husky": "^4.3.8",
    "np": "^7.2.0",
    "script-progress": "^1.0.5"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "type-empty": [
        0,
        "never"
      ],
      "subject-empty": [
        0,
        "never"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
