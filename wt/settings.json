// Profiles for use with Windows Terminal

// To view the default settings, hold "alt" while clicking on the "Settings" button.
// For documentation on these settings, see: https://aka.ms/terminal-documentation

// Default location:
//  "%HOME%\AppData\Local\Microsoft\Windows Terminal\settings.json"
//  "%LOCALAPPDATA%\Microsoft\Windows Terminal\settings.json"

{
  "$schema": "https://aka.ms/terminal-profiles-schema",

  "alwaysShowTabs": true,
  "defaultProfile": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
  "initialCols": 120,
  "initialRows": 30,
  "launchMode": "maximized",
  "showTabsInTitlebar": true,
  "showTerminalTitleInTitlebar": true,
  "snapToGridOnResize": true,
  "tabWidthMode": "titleLength",
  "wordDelimiters": " /\\()\"'-.,:;<>~!@#$%^&*|+=[]{}~?\u2502",
  "confirmCloseAllTabs": true,

  "profiles": {
    "defaults":
    {
      // Put settings here that you want to apply to all profiles
      "antialiasingMode": "grayscale",
      "closeOnExit": "graceful",
      "colorScheme" : "Dracula",
      "cursorShape": "bar",
      "fontFace": "Hack NF",
      "fontSize": 10,
      "padding": "10, 10, 10, 10",
      // "startingDirectory": "%USERPROFILE%",
      "snapOnInput": true,
      "useAcrylic": true,
      "acrylicOpacity": 0.9
    },
    "list":
    [
      {
        "guid": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
        "name": "PowerShell Core",
        // "source": "Windows.Terminal.PowershellCore",
        "commandline": "C:/Users/Pat/scoop/apps/pwsh/current/pwsh.exe",
        "icon": "C:/Users/Pat/AppData/Local/Microsoft/Windows Terminal/icons/powershell-core.png"
      },
      {
        "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
        "name": "PowerShell",
        "commandline": "powershell.exe -NoLogo",
        "icon": "C:/Users/Pat/AppData/Local/Microsoft/Windows Terminal/icons/powershell.png"
      },
      {
        "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
        "name": "cmd",
        "commandline": "cmd.exe",
        "icon": "C:/Users/Pat/AppData/Local/Microsoft/Windows Terminal/icons/cmd.png"
      },
      {
        "guid": "{187e9a26-26c5-4de5-9565-e7379812e4ce}",
        "name" : "Git Bash",
        "commandline" : "C:/Program Files/Git/bin/bash.exe -li",
        "icon" : "C:/Program Files/Git/mingw64/share/git/git-for-windows.ico"
      },
      {
        "guid": "{7df16305-71ee-4928-ae34-593a2c7ec2d5}",
        "name" : "MSYS2",
        "commandline" : "C:/Users/Pat/scoop/apps/msys2/current/msys2_shell.cmd -defterm -no-start -mingw64",
        "icon": "C:/Users/Pat/scoop/apps/msys2/current/msys2.ico"
      },
      {
        "guid": "{e2d2a2ce-3477-44c4-a75f-6e2c377ac0c8}",
        "name" : "Cygwin",
        "commandline" : "C:/cygwin/bin/bash --login -i",
        // "icon" : "C:/cygwin/cygwin.ico",
        "icon": "C:/Users/Pat/AppData/Local/Microsoft/Windows Terminal/icons/cygwin.png",
        "startingDirectory" : "C:/cygwin/bin",
        "hidden": true
      },
      {
        "guid": "{27cc0c27-a2cb-4041-88e1-5b0e2c46829e}",
        "name" : "VS 2019 Dev Cmd",
        "commandline" : "cmd.exe /k \"C:/Program Files (x86)/Microsoft Visual Studio/2019/Community/Common7/Tools/VsDevCmd.bat\"",
        "icon": "C:/Users/Pat/AppData/Local/Microsoft/Windows Terminal/icons/visual-studio.png",
        "startingDirectory" : "%USERPROFILE%",
        "hidden": true
      },
      {
        "guid": "{2c4de342-38b7-51cf-b940-2309a097f518}",
        "name": "Ubuntu",
        "source": "Windows.Terminal.Wsl",
        "icon": "C:/Users/Pat/AppData/Local/Microsoft/Windows Terminal/icons/ubuntu.png"
      },
      {
        "guid": "{07b52e3e-de2c-5db4-bd2d-ba144ed6c273}",
        "name": "Ubuntu-20.04",
        "source": "Windows.Terminal.Wsl",
        "icon": "C:/Users/Pat/AppData/Local/Microsoft/Windows Terminal/icons/ubuntu.png"
      },
      {
        "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
        "name": "Azure Cloud Shell",
        "source": "Windows.Terminal.Azure"
        // "hidden": true
      }
    ]
  },

  // Add custom color schemes to this array
  "schemes": [
    {
      "name" : "Dracula",
      "background" : "#282A36",
      "black" : "#21222C",
      "blue" : "#BD93F9",
      "brightBlack" : "#6272A4",
      "brightBlue" : "#D6ACFF",
      "brightCyan" : "#A4FFFF",
      "brightGreen" : "#69FF94",
      "brightPurple" : "#FF92DF",
      "brightRed" : "#FF6E6E",
      "brightWhite" : "#FFFFFF",
      "brightYellow" : "#FFFFA5",
      "cyan" : "#8BE9FD",
      "foreground" : "#F8F8F2",
      "green" : "#50FA7B",
      "purple" : "#FF79C6",
      "red" : "#FF5555",
      "white" : "#F8F8F2",
      "yellow" : "#F1FA8C"
    }
  ],

  // Add any keybinding overrides to this array.
  // To unbind a default keybinding, set the command to "unbound"
  "keybindings": [
    {
      "command": "copy",
      "keys": ["ctrl+c"]
    },
    {
      "command": "paste",
      "keys": ["ctrl+v"]
    },
    {
      "command": "find",
      "keys": ["ctrl+f"]
    },
    {
      "command": "closeTab",
      "keys": ["ctrl+w"]
    },
    {
      "command": "newTab",
      "keys": ["ctrl+t"]
    },
    {
      "command": "nextTab",
      "keys": "ctrl+tab"
    },
    // Creating a new pane
    { "command": { "action": "splitPane", "split": "horizontal" }, "keys": "alt+shift+-" },
    { "command": { "action": "splitPane", "split": "vertical" }, "keys": "alt+shift+plus" },
    { "command": { "action": "splitPane", "split": "auto" }, "keys": "alt+shift+d" },
    // { "command": { "action": "splitPane", "split": "auto" }, "keys": "ctrl+shift+t" },
    // Resizing a pane
    { "command": { "action": "resizePane", "direction": "down" }, "keys": "alt+shift+down" },
    { "command": { "action": "resizePane", "direction": "left" }, "keys": "alt+shift+left" },
    { "command": { "action": "resizePane", "direction": "right" }, "keys": "alt+shift+right" },
    { "command": { "action": "resizePane", "direction": "up" }, "keys": "alt+shift+up" },
    // Switching between panes
    { "command": { "action": "moveFocus", "direction": "down" }, "keys": "alt+down" },
    { "command": { "action": "moveFocus", "direction": "left" }, "keys": "alt+left" },
    { "command": { "action": "moveFocus", "direction": "right" }, "keys": "alt+right" },
    { "command": { "action": "moveFocus", "direction": "up" }, "keys": "alt+up" }
  ]
}
